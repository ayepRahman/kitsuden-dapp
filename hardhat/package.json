{
  "name": "hardhat",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "node": "npx hardhat node",
    "compile": "npx hardhat compile",
    "console": "npx hardhat console --network localhost",
    "deploy-dev": "npx hardhat run scripts/deploy-testnet.ts --network localhost",
    "deploy-testnet": "npx hardhat run scripts/deploy-testnet.ts --network goerli",
    "deploy-mainnet": "npx hardhat run scripts/deploy-mainnet.ts --network mainnet",
    "verify-testnet": "npx hardhat verify --network goerli 0x9555DF1b31b092D25F17D77aA00FC935d48C81df",
    "verify-testnet-args": "npx hardhat verify --constructor-args arguments-testnet.js  --network goerli 0x3DA1F997a59E76E534fC62ED0d029ef008f5e694",
    "verify-mainnet": "npx hardhat verify --network mainnet <smart contract address>",
    "verify-mainnet-args": "npx hardhat verify --constructor-args arguments-mainnet.js  --network mainnet <smart contract address>",
    "test": "npx hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.1",
    "@openzeppelin/contracts": "^4.7.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "erc721a": "^4.2.3",
    "ethers": "^5.4.7",
    "hardhat": "^2.12.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0"
  }
}
